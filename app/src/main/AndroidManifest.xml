<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.hp.studentattendance">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Main2Activity"
            android:label="@string/title_activity_main2"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.hp.studentattendance.MainActivity" />
        </activity>
        <activity
            android:name=".TeacherActivity"
            android:label="@string/title_activity_teacher"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.hp.studentattendance.MainActivity" />
        </activity>
        <activity
            android:name=".Add_Student_Activity"
            android:label="@string/title_activity_add__student_"
            android:parentActivityName=".TeacherActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.hp.studentattendance.TeacherActivity" />
        </activity>
        <activity
            android:name=".View_Attendance_Activity"
            android:label="@string/title_activity_view__attendance_"
            android:parentActivityName=".TeacherActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.hp.studentattendance.TeacherActivity" />
        </activity>
        <activity
            android:name=".Take_Attendance_Activity"
            android:label="@string/title_activity_take__attendance_"
            android:parentActivityName=".TeacherActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.hp.studentattendance.TeacherActivity" />
        </activity>
    </application>

</manifest>